<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnahiQuezadaNotes.Views.AQControlDeUsuario"
             Title="Conteo de Caracteres">
    <FlexLayout Direction="Column"
                AlignItems="Center"
                JustifyContent="Center">
        <Entry x:Name="inputEntry"
               Placeholder="Ingrese una cadena de caracteres"
               FontSize="18"
               Margin="20"/>
        <Button x:Name="btnCalcular"
                Text="Calcular"
                Clicked="btnCalcular_Clicked"
                Margin="20" />
        <Label x:Name="resultadoLabel"
               FontSize="18"
               Margin="20"/>
        <Button x:Name="btnLimpiar"
                Text="Limpiar"
                Clicked="btnLimpiar_Clicked"
                Margin="20"/>
    </FlexLayout>
</ContentPage>